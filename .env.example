# 런타임 환경 (development | production)
NEXT_PUBLIC_RUNTIME_ENV=development

# 클라이언트(브라우저)에서 사용하는 API URL
NEXT_PUBLIC_API_URL=http://localhost:30000

# 서버(SSR)에서 사용하는 API URL (Docker 내부 통신용)
API_URL=http://tugo-server:8080

# Refresh Token 최대 유효기간 (밀리초)
# 기본값: 604800000 (7일)
NEXT_PUBLIC_REFRESH_TOKEN_MAX_AGE_MS=604800000

# Access Token 선제 갱신 임계값 (밀리초)
# 기본값: 2700000 (45분)
NEXT_PUBLIC_TOKEN_REFRESH_THRESHOLD_MS=2700000
